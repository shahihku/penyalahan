#!/bin/bash
domainku=$(cat /etc/xray/domain)
read -p "Username       : " Login
read -p "Password       : " Pass
read -p "Max IP         : " iplimit
read -p "Expired (Days) : " masaaktif
#limitip
if [[ $iplimit -gt 0 ]]; then
echo -e "$iplimit" > /etc/gboy/limit/ssh/ip/$user
else
echo > /dev/null
fi
clear
useradd -e `date -d "$masaaktif days" +"%Y-%m-%d"` -s /bin/false -M $Login
expi="$(chage -l $Login | grep "Account expires" | awk -F": " '{print $2}')"
echo -e "$Pass\n$Pass\n"|passwd $Login &> /dev/null
hariini=`date -d "0 days" +"%Y-%m-%d"`
expi=`date -d "$masaaktif days" +"%Y-%m-%d"`
clear

run_output() {                
echo -e "═════════════════════════════"                 
echo -e "<=  SSH PERTAMAX RACING =>"       
echo -e "═════════════════════════════"                 
echo -e "<=  Created By MahaVPN =>"                 
echo -e "═════════════════════════════" 
echo -e ""
echo -e "Username     : $Login"
echo -e "Password     : $Pass"        
echo -e "CITY         : $(cat /root/.mycity)"
echo -e "ISP          : $(cat /root/.myisp)"
echo -e "Host/IP      : $domain"
echo -e "Port ssl/tls : 443"
echo -e "Port non tls : 80, 8080, 8000, 109, 69"                        
echo -e "BadVpn       : 7300"      
echo -e ""  
echo -e "═════════════════════════════"                 
echo -e "Payload Ws   => GET wss://bug.com/ HTTP/1.1[crlf]Host: $domain[crlf]Upgrade: websocket[crlf][crlf]"
echo -e "═════════════════════════════"                 
echo -e "     Expired => $expi"
echo -e "═════════════════════════════"                 
echo -e "❗️MAX LOGIN USER STB (1 STB)" 
echo -e "  Note: Max 7 user tersambung ke STB"                
echo -e "❗️MAX LOGIN USER HP (2 HP)"                 
echo -e "❗️NO VOUCHERAN & RT/RW NET"                 
echo -e "❗️MELANGGAR = BANNED"                 
echo -e "🤙MATUR TENGKYU TUWAN $Login"                  
echo -e "═════════════════════════════"
}

run_tele() {
telegram-send --pre "$(run_output)"                        
}       
    
run_output
run_tele > /dev/null &
    
